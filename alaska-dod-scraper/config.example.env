# Alaska DoD Scraper - Configuration Template
# Copy this file to .env and fill in your values

# Email Alert Configuration
# -------------------------
# For Gmail: Use App Passwords (https://support.google.com/accounts/answer/185833)
# For other providers: Use your SMTP credentials

SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# Alert recipients (comma-separated)
ALERT_TO_EMAILS=recruiting@akarng.mil,leadership@akarng.mil

# From address (optional, defaults to SMTP_USERNAME)
ALERT_FROM_EMAIL=alaska-intel@akarng.mil

# SMTP Server Configuration (optional, defaults to Gmail)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587

# Slack Integration (optional)
# ----------------------------
# Create webhook: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Alert Thresholds
# ----------------
# Bonus changes that trigger HIGH priority alerts (in dollars)
BONUS_THRESHOLD_HIGH=5000

# Bonus changes that trigger MEDIUM priority alerts (in dollars)
BONUS_THRESHOLD_MEDIUM=2000

# Messaging shift threshold (percentage change)
MESSAGING_THRESHOLD=50

# Scraper Settings
# ----------------
# Run browser in headless mode (true/false)
PLAYWRIGHT_HEADLESS=true

# Slow down browser actions (milliseconds, helps avoid detection)
PLAYWRIGHT_SLOW_MO=100

# Monthly Automation
# ------------------
# For cron jobs - set to false if running manually
AUTO_SEND_ALERTS=true

# Keep historical data (number of months)
KEEP_HISTORY_MONTHS=12
